<h2>Venues</h2>
<a href="/admin/venues/new" style="float:right;padding:5px;">Add New Venue</a>
<div style="clear:both;">
	<table id="users" style="width:75%;">
		<tr class="header">
			<th style="width:20%;">Name</th>
			<th style="width:55%;">Description</th>
			<th style="width:15%;">Capacity</th>
			<th>Links</th>
		</tr>
		<% if !@venues.empty? %>
			<% @venues.each do |venue| %>
				<tr>
					<td><%= venue.name if venue.name %></td>
					<td style="word-wrap:break-word;"><%= venue.description if venue.description %></td>
					<td><%= venue.capacity %></td>
					<td style="vertical-align:middle;">
						<a onclick="confirmation('<%= venue.name %>','/admin/venues/delete/<%= venue.id %>')">Delete</a>
					</td>
				</tr>
			<% end %>
		<% else %>
			<tr>
				<td colspan="4" class="center"><strong>No venues found</strong></td>
			</tr>
		<% end %>
	</table>
</div>
