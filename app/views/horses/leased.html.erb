<h2>Leases</h2>
<table id="horses" style="width:100%;">
	<tr class="header">
		<th style="width:50%;text-align:right;">Horse</th>
		<th style="width:50%;">Client</th>
	</tr>
	<% if @leases.first %>
		<% @leases.each do |horse,client| %>
			<tr>
				<td style="text-align:right;"><%= horse %></td>
				<td><%= client %></td>
			</tr>
		<% end %>
	<% else %>
		<tr><td colspan="2" style="text-align:center">No leases</td></tr>
	<% end %>
</table>