<div class="form_section">
	<h3>Details</h3>
	<table class="form_table">
		<tr>
			<td><%= text_field_tag "name", @horse.name, :placeholder => "Name", :class => "long field" %></td>
			<td></td>
		</tr>
		<tr>
			<td style="padding-left:10px;padding-right:10px;">Availability: <%= check_box_tag "availability", "", @horse.availability, :class => "field" %></td>
			<td style="padding-left:10px;padding-right:10px;">Exercise: <%= check_box_tag "exercise", "", @horse.exercise, :class => "field" %></td>
		</tr>
		<tr>
			<td><%= text_field_tag "max_day_workload", @horse.max_day_workload, :placeholder => "Max Day Workload (hrs)", :class => "long field" %></td>
			<td><%= number_field_tag "max_weight", @horse.max_weight, :placeholder => "Max Weight (stones)", :step => 1, :min => 0, :class => "long field" %></td>
		</tr>
	</table>
</div>
<div class="form_section">
	<h3>Other</h3>
	<table class="form_table">
		<tr>
			<td>Skip Issues:<%= check_box_tag "skip_issues", "", @horse.skip_issues, :class => "field" %></td>
			<td>Group Lessons:<%= check_box_tag "group", "", @horse.group, :class => "field" %></td>
			<td>Livery:<%= check_box_tag "livery", "", @horse.livery, :class => "field" %></td>
			<td>BHS Stage:<%= text_field_tag "bhs", @horse.bhs, :placeholder => "BHS Stage", :class => "field" %></td>
		</tr>
	</table>
</div>
<div class="form_section">
	<h3>Abilities</h3>
	<table class="form_table">
		<tr>
			<td style="width:100%">
				Horse can:<br/>
				Walk:<%= check_box_tag "walk", "", @horse.walk, :class => "field break_right" %>Trot with Stirrups:<%= check_box_tag "trot_with", "", @horse.trot_with, :class => "field break_right" %>Trot without Stirrups:<%= check_box_tag "trot_without", "", @horse.trot_without, :class => "field break_right" %>Canter:<%= check_box_tag "canter", "", @horse.canter, :class => "field break_right" %><br/>
				Hack:<%= check_box_tag "hack", "", @horse.hack, :class => "field break_right" %>Jump up to 0.5m:<%= check_box_tag "jump_5_meter", "", @horse.jump_5_meter, :class => "field break_right" %>Jump up to 0.75m:<%= check_box_tag "jump_75_meter", "", @horse.jump_75_meter, :class => "field break_right" %>Cross-Country:<%= check_box_tag "x_country", "", @horse.x_country, :class => "field break_right" %>&nbsp;
			</td>
		</tr>
	</table>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		$("input#availability").unbind("click").click(function() {
			if ($(this).is(':checked') && $("input#exercise").is(':checked')) $("input#exercise").attr("checked", false);
		});
		$("input#exercise").unbind("click").click(function() {
			if ($(this).is(':checked') && $("input#availability").is(':checked')) $("input#availability").attr("checked", false);
		});
	})
</script>