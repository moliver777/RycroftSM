<html>
	<head>
		<style type="text/css">
			h1 {
				font-size: 18px;
				font-weight: bold;
				text-decoration: underline;
			}
			
			table {
				width: 100%;
				border-collapse: collapse;
			}
			
			table td, table th {
				border: 1px solid black;
			}
			
			table th {
				font-weight: bold;
				font-size: 1.1em;
			}
		</style>
	</head>
	<body>
		<h1><%= @client.first_name.upcase %> <%= @client.last_name.upcase %></h1>
		<table>
			<tr>
				<th>Date of Birth:</th>
				<td><%= @client.date_of_birth.strftime("%d-%m-%Y") %></td>
			</tr>
			<tr>
				<th>Height:</th>
				<td><%= @client.height %></td>
			</tr>
			<tr>
				<th>Weight (stones):</th>
				<td><%= @client.weight %></td>
			</tr>
			<tr>
				<th>Standard:</th>
				<td><%= @client.standard.downcase.capitalize if @client.standard %></td>
			</tr>
			<tr>
				<th>Address:</th>
				<td><%= @client.address %><br/><%= @client.post_code %></td>
			</tr>
			<tr>
				<th>Telephone:</th>
				<td>Home: <%= @client.home_phone %><br/>Mobile: <%= @client.mobile_phone %></td>
			</tr>
			<tr>
				<th>Previous Injury:</th>
				<td><%= @client.injury ? @client.injury_details : "None" %></td>
			</tr>
			<tr>
				<th>Medical Notes:</th>
				<td><%= @client.medical_notes %></td>
			</tr>
			<tr>
				<th>Doctor:</th>
				<td><%= @client.doctor %><br/><%= @client.doctor_contact %></td>
			</tr>
			<tr>
				<th>Emergency Contact:</th>
				<td><%= @client.emergency_contact_name %><br/><%= @client.emergency_contact_phone %></td>
			</tr>
			<tr>
				<th>Times ridden<br/>last 12 months:</th>
				<td><%= @client.times_ridden %></td>
			</tr>
			<tr>
				<th>Client can:</th>
				<td><%= @client.abilities %></td>
			</tr>
			<tr>
				<th>Heard About Us:</th>
				<td><%= @client.heard_about_us %></td>
			</tr>
		</table>
	</body>
</html>

<script type="text/javascript">
	window.print();
</script>