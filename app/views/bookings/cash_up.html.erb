<script type="text/javascript">
	$(document).ready(function() {
		$("input#date").datepicker({dateFormat: "dd-mm-yy"});
		$(".ui-datepicker").hide();

		$("button#change_date").unbind("click").click(function() {
			window.location.href = "/cash_up/"+$("input#date").val();
		})
	})
</script>