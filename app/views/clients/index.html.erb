<h2>Clients</h2>
<% if current_user.user_level != User::BASE %>
	<a href="/clients/new" style="float:right;padding:5px;">Add New Client</a>
<% end %>
<table id="clients" style="width:100%;">
	<tr class="header">
		<th class="sorted sortable" sort="last_name" style="width:12%;"><span class="sort"></span>Name</th>
		<th class="sortable" sort="date_of_birth" style="width:10%"><span class="sort"></span>Date of Birth</th>
		<th class="sortable" sort="standard" style="width:12%;"><span class="sort"></span>Riding Standard</th>
		<th style="width:30%;">Address</th>
		<th style="width:15%;">Phone</th>
		<th style="width:12%;">Emergency Contact</th>
		<th>Links</th>
	</tr>
	<%= render :partial => "table_contents" %>
</table>

<script type="text/javascript">
	$(document).ready(function() {
		$.each($("th.sortable"), function(i,sort) {
			$(sort).unbind("click").click(function() {
				$("th.sortable").removeClass("sorted");
				$(this).addClass("sorted")
				$.ajax({
					url: "/clients/sort/"+$(this).attr("sort"),
					type: "GET",
					success: function(json) {
						$('table#clients tr:not(.header)').remove();
						$('table#clients').append(json);
					}
				})
			})
		})
	})
</script>